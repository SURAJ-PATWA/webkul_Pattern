int main() {

 int n=5;
 
 for(int i=0;i<n+1;i++){
 std::cout<<"e" << std::endl;
 }
 for(int i=0;i<n+2;i++){
 std::cout<<"e";
 }
 std::cout<< std::endl;
 
 for(int i=0;i<n;i++){
 for(int j=0;j<n-i+1;j++){
 std::cout<<" ";
 }
 
 for(int j=0;j<=i;j++){
 std::cout<<"@";
 }
 std::cout<< std::endl;
 }

 return 0;
}
