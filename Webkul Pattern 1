#include<iostream>
using namespace std;
int main(){
    int n=9;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i<=i ||i>n/2 && j<n-i  || i==n/2 ){
                std::cout<<"x";
            }
            else{
                std::cout<<" ";
            }
        }
        if(i==n/2){
            std::cout<<"xxx";
           
        }
        if(i==n/2-1 || i==n/2+1){
            std::cout<<" x";
        }
        std::cout<<std::endl;
    }
   
   
}
