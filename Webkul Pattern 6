 

/*
n==5

       *  
      *** 
     *****
     @   @
     @   @
     @   @
*****@   @*****
 ***       ***
  *         *

n==3

    *  
   *** 
   @ @
***@ @***
 *     *
 
 
 */  // comment close



#include<iostream>
using namespace std;
int main(){
    int n=5;
    //1st part
    for(int i=0;i<(n/2+1);i++){
        for(int j=0;j<(n+(n/2)-i);j++){
                std::cout<<" ";
        }
       for(int j=0;j<(2*i +1);j++){
           std::cout<<"*";
       }
       for(int j=0;j<(2-i);j++){
           std::cout<<" ";
       }
       
        std::cout<<std::endl;
    }
   
    //2nd part
    for(int i=0;i<(n-2);i++){
        for(int j=0;j<n;j++){
        std::cout<<" ";
        }
        std::cout<<"@";
        for(int j=0;j<n-2;j++){
            std::cout<<" ";
        }
         std::cout<<"@";
         
             std::cout<<endl;
 
       
    }
   
    //3rd part
   
    for(int i=0;i<1;i++){
        for(int j=0;j<n;j++){
            std::cout<<"*";
        }
        std::cout<<"@";
        for(int j=0;j<n-2;j++){
           std:: cout<<" ";
        }
        cout<<"@";
         for(int j=0;j<n;j++){
            std::cout<<"*";
        }
       
        std::cout<<endl;
       
    }
   
    //4th part
    for(int i=0;i<n/2;i++){
        for(int j=0;j<=i;j++){
           std:: cout<<" ";
        }
        for(int j=0;j<n-(2*(i+1));j++){
            std::cout<<"*";
        }
        for(int j=0;j<n+2*(i+1);j++){
            std::cout<<" ";
        }
         for(int j=0;j<n-(2*(i+1));j++){
            std::cout<<"*";
        }
        std::cout<<endl;
    }
   
   
}
