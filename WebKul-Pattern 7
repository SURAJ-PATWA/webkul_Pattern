#include <iostream>
using namespace std;
using std::cout;

using std::endl;



int main() {
    // Write C++ code here
    int n=5;
    
    //1st part
   for (int i = 0; i < n-1; i++) {
        for(int j=0;j<(2*n+1-i);j++){cout<<" ";}
        for(int j=0;j<(2*i+1);j++){cout<<"*";}
        cout<<endl;
   }
   
   //2nd part
   
   for(int j=0;j<n+2;j++){cout<<'@';}
   for(int j=0;j<(2*n-1);j++){cout<<"*";}
   cout<<endl;
   //3rd part
   for (int i = n-2; i >=0; i--) {
        for(int j=0;j<(2*n+1-i);j++){cout<<" ";}
        for(int j=0;j<(2*i+1);j++){cout<<"*";}
        cout<<endl;
   }
   




return 0;

    
}
